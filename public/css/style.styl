body
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif
  padding 50px

a
  color #00B7FF

.clearfix
  &:after
    margin-bottom 50px
    content ''
    width 0
    height 0
    visibility hidden
    display block
    clear both
#hexagon
  height 282px
.content-hex
  margin 0 auto
  width 290px
.hexagon
  margin-top 30px
  height 50px
  width 90px
  background #F2F1F2
  position relative
  float left
  margin-right 5px
  cursor pointer
  &:before
    position absolute
    bottom 100%
    content ''
    height 0
    width 0
    border-width 0 45px 30px 45px
    border-style solid
    border-color #F2F1F2 transparent
  &:after
    position absolute
    top 100%
    content ''
    height 0
    width 0
    border-width 30px 45px 0 45px
    border-style solid
    border-color #F2F1F2 transparent
  &:hover
    background-color #F5F5F5

.top, .bottom
  float left
  clear left

.top
  margin-left 48px
  margin-top 3px

.bottom
  margin-top 3px

.hexagon:hover:before, .hexagon:hover:after
  border-color #F5F5F5 transparent
